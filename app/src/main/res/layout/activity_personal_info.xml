<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/rlDown"
        >


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlDown"
        android:layout_width="match_parent"
        android:layout_height="487dp"

        android:background="@drawable/ic_bgcolor2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <RelativeLayout
            android:id="@+id/ref1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/textView"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Name:"
                android:textColor="@color/logocolor"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/namePI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:background="@null"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/nameEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="360dp"
                android:background="@null"
                app:srcCompat="@drawable/ic_edit" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ref2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/ref1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Number:"
                android:textColor="@color/logocolor"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/numberPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:background="@null"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Number"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/numberEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="360dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_edit" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ref3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ref2"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Email Id:"
                android:textColor="@color/logocolor"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/emailPI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Email Id"
                android:inputType="textPersonName"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/emailEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="360dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_edit" />

        </RelativeLayout>

        <Button
            android:id="@+id/chngPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Change Password"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="33dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Personal Information"
            android:textColor="@color/black"
            android:textSize="35dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@mipmap/fav_foreground"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <ImageButton
        android:id="@+id/backPI"
        android:layout_width="55dp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/ic_backxd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>