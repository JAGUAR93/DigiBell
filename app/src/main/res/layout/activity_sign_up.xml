<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:background="@mipmap/fav_foreground">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/ic_bgcolor2">


        <Button
            android:id="@+id/signupS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/loginSx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="42dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:text=" Login "
            android:textColor="@color/black"
            android:textSize="25dp"
            app:cornerRadius="20dp" />


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupS"
            android:layout_alignEnd="@+id/signupS"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_bar" />

        <RelativeLayout
            android:id="@+id/rlInfo2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="220dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameInNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Enter Name"
                android:textAlignment="textStart"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameInNum"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Enter Number"
                android:inputType="numberSigned"
                android:maxLength="10" />

            <EditText
                android:id="@+id/passInNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <ToggleButton
                android:id="@+id/showPassInNum"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_below="@+id/number"
                android:layout_alignEnd="@+id/passInNum"
                android:background="@drawable/ic_closeeye"
                android:text=" " />

            <EditText
                android:id="@+id/passCnfrmInNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passInNum"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Confirm Password"
                android:textColor="@color/black" />

        </RelativeLayout>

        <Button
            android:id="@+id/getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signUpCode"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Get Verification Code"
            android:textColor="@color/black"
            app:cornerRadius="20dp" />

        <EditText
            android:id="@+id/signUpCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signupcnfrmNum"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="14dp"
            android:hint="------"
            android:imeActionId="6"
            android:imeActionLabel="Send"
            android:imeOptions="actionUnspecified"
            android:inputType="phone"
            android:letterSpacing="0.8"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/signupcnfrmNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:cornerRadius="20dp" />

    </RelativeLayout>
</RelativeLayout>
