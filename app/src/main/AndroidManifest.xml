<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.digi_bell">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Digi_Bell">

        <activity
            android:name=".Login"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".NumberUpdate"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".GestureMain"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".Generator1"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".ScanReceive"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".Receiver"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".SignUp"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".Contact"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".Personal_info"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".UserProfile"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".HomeScreen2"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity
            android:name=".HomeScreen1"
            android:theme="@style/Theme.Digi_Bell.NoActionBar." />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>